<p id="notice"><%= notice %></p>

<h1>Listing General Managers</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Team</th>
      <th>Notes</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @general_managers.each do |general_manager| %>
      <tr>
        <td><%= general_manager.first_name %></td>
        <td><%= general_manager.last_name %></td>
        <td><%= general_manager.team_id %></td>
        <td><%= general_manager.notes %></td>
        <td><%= general_manager.active %></td>
        <td><%= link_to 'Show', general_manager %></td>
        <td><%= link_to 'Edit', edit_general_manager_path(general_manager) %></td>
        <td><%= link_to 'Destroy', general_manager, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

